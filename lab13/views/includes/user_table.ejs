<div class="box">
    <div class="field is-grouped">
        <p class="control is-expanded">
            <input class="input" type="text" placeholder="Find a user">
        </p>
        <p class="control">
            <a class="button is-info">
                Search
            </a>
        </p>
    </div>
    <% if (names.length > 0) { %>
        <div class="section">
            <% for (let elemento of names) { %>
                <div class="box">
                    <p><%= elemento %></p>
                </div>
                <% } %>
            </div>
        <% } else { %>
            <h1>El arreglo está vacío</h1>
        <% } %>   
    <form method="post">
        <div class="field is-grouped">
            <div class="control is-expanded">
                <input class="input" type="text" name="user_input" placeholder="Roberto Ejemplo Martínez">
            </div>
            <button class="button is-primary" type="submit">Add</button>
        </div>
    </form>
</div>